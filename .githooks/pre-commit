#!/bin/bash

if git log -1 --oneline --pretty=format:'%s' | grep -e '^\[WIP\]' -e '^\[wip\]'; then
    last_commit=$(git log -1 --date=raw --pretty=format:"%ad")
    current_commit=${GIT_AUTHOR_DATE}
    if echo "${current_commit}" | grep -q -v "${last_commit}"; then
        echo "Last commit is wip commit!!"
        exit 1
    fi
fi
